<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3f929f">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Home"
            android:id="@+id/home_label"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:id="@+id/settings_button"
            android:src="@drawable/ic_menu_copy_material"
            android:background="#3f929f"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:showDividers="middle"
        android:background="#d8e6f3">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/salt_icon"
            android:src="@drawable/salticon"
            android:layout_centerVertical="true"
            android:layout_marginStart="55dp" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/water_icon"
            android:src="@drawable/watericon"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="55dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/WaterProgress"
            android:max="100"
            android:indeterminate="false"
            android:background="#544ed1" />

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/SaltProgress"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:max="100"
            android:indeterminate="false"
            android:background="#787878"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d8e6f3">

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:id="@+id/imageView3"
            android:src="@drawable/clock_web" />

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:id="@+id/imageView4"
            android:src="@drawable/clock_web"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:id="@+id/imageView5"
            android:src="@drawable/clock_web"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Drug1"
            android:id="@+id/button"
            android:layout_marginRight="10dp"
            android:layout_alignTop="@+id/button3"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/imageView3" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Drug2"
            android:id="@+id/button2"
            android:layout_below="@+id/imageView4"
            android:layout_alignStart="@+id/imageView4"
            android:layout_alignEnd="@+id/imageView4" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Drug3"
            android:id="@+id/button3"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/imageView5"
            android:layout_alignStart="@+id/imageView5" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Tracker"
            android:id="@+id/button4"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/button_blue"
            android:textColor="@color/white" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Forums"
            android:id="@+id/button5"
            android:background="@color/button_blue"
            android:textColor="@color/white"
            android:layout_alignTop="@+id/button4"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Blogs"
            android:id="@+id/button6"
            android:layout_marginRight="10dp"
            android:background="@color/button_blue"
            android:textColor="@color/white"
            android:layout_alignTop="@+id/button4"
            android:layout_alignParentEnd="true" />
        <Button
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:text="POTS Clock"
            android:background="@color/button_blue"
            android:textColor="@color/white"
            android:layout_below="@+id/button4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp" />
    </RelativeLayout>

</LinearLayout>